<!--This will be the page that contains the contact content. It should 
	include a contact form. with firstname, lastname, email 
	and it would be great if I could figure out how to save that data in a
	text file in the main folder -->
<section class="layout">
	<article id="contactus">
		<h1>If you'd like to <%= title %></h1>
		<form action="contactForm" method="POST">
			<div>
				<label for="firstname">Firstname:</label>
				<input type="text" name="firstname" >
			</div>
			<div>
			<label for="firstname">Lastname:</label>
			<input type="text" name="lastname" >
			</div>
			<div>
			<label for="firstname">Email:</label>
			<input type="password" name="password" >
			</div>
			<div>
				<h4>Add a comment</h4>
				<textarea rows="15" cols="50">Feel free to drop us note along with your contact information.
				</textarea>
			</div>
			<div>
			<input type="submit" name="submitBtn" value="Submit">
			</div>
		</form>
	</article>

</section>	
